<%= render 'shared/components/c_landing_header',
  title: @indicator.name %>

<script>
  App.Data.categories = <%= raw(@categories) %>;
</script>

<%= form_for [@model, @indicator] do |f| %>
  <div class="l-indicator-edit">
    <div class="row">
      <div class="small-12 columns">
        <div class="row align-right">
          <div class="small-2 columns">
            <%
              indicators_path =
                if defined? @model
                  model_indicators_path(@model)
                else
                  indicators_path
                end
            %>
            <%= link_to indicators_path, class: 'l-indicator-edit__form-action' do %>
              <%= render 'shared/components/c_flying_button' %>
            <% end %>
          </div>
          <div class="small-2 columns">
            <%= f.submit 'Save', class: 'c-button' %>
          </div>
        </div>
      </div>
    </div>
    <div class="l-indicator-edit__fields row">
      <div class="small-12 columns">
        <%= render 'shared/components/form/c_form',
          object: @indicator,
          f: f,
          attributes: Indicator.attribute_infos %>
      </div>
    </div>
  </div>
<% end %>
