<%= render 'shared/components/c_landing_header', title: "#{@note.indicator.name} > Note", no_nav: true %>

<%= form_for @note, url: model_indicator_note_path(@note.model, @note.indicator), method: :put do |f| %>
  <div class="l-indicator-edit">
    <div class="row">
      <div class="small-12 columns">
        <div class="row align-right">
          <div class="small-2 columns">
            <%= link_to model_indicators_path(@note.model), class: 'l-note-edit__form-action' do %>
              <%= render 'shared/components/c_flying_button' %>
            <% end %>
          </div>
          <div class="small-2 columns">
            <%= f.submit 'Save', class: 'c-button' %>
          </div>
        </div>
      </div>
    </div>
    <div class="l-indicator-edit__fields row">
      <div class="small-12 columns">
        <%= render 'shared/components/form/c_form', object: @note, f: f, attributes: Note.attribute_infos %>
      </div>
    </div>
  </div>
<% end %>
