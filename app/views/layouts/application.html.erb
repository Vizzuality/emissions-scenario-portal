<!DOCTYPE html>
<html>
  <head>
    <title>Emissions Scenario Portal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'shared/icons' %>
    <%= render 'shared/flash_notifications', notifications: flash %>
    <% if user_signed_in? %>
      <%= current_user.name %>
      <%= link_to 'Sign out', destroy_user_session_url, method: :delete %>
    <% end %>
    <%= yield %>
  </body>
</html>
